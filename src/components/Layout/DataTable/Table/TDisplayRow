import React from "react";
import { TableCell } from "@material-ui/core";
import { getKeys } from "../util";
import { Config } from "../EditableDataTable";

interface Props<T> {
  data: T;
  config: Config<T>;
  renderOptions?: () => JSX.Element;
}

function TDisplayRow<T>({ data, config, renderOptions }: Props<T>) {
  return (
    <>
      {getKeys(data).map((key) => {
        const currentConfig = config[key];
        const representation = currentConfig.displayValue
          ? currentConfig.displayValue(data[key])
          : data[key];

        return <TableCell>{representation}</TableCell>;
      })}
      {renderOptions && renderOptions()}
    </>
  );
}

export default TDisplayRow;
